extends layout

block content
  h1 Parasound Remote 

  fieldset#power
    legend Power
    button#power_on On 
    button#power_off Off
  
  fieldset#volume
    legend Volume
    button#volume_up &#8593;
    button#volume_down &#8595;

  fieldset#source
    legend Source
    button#source_71 Bluray
    button#source_optical TV/Roku
    button#source_line iPod

  fieldset#audio_mode
    legend Audio Modes
    button#sub_up Sub &#8593;
    button#sub_down Sub &#8595;
    button#toggle_late_night Night
